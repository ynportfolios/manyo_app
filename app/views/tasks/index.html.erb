<h1>タスク一覧</h1>

<%= form_with url: root_path, method: :get, local: true do |f| %>
  <%= f.label :タスク名 %>
  <%= f.text_field :name, id: 'task_name_field' %>
  <%= f.label :ステータス %>
  <%= f.select :status, Task.statuses.keys, {}, id: 'status_field' %>
  <%= f.submit :検索%>
<% end %>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>終了期限</th>
      <th>登録日時</th>
      <th>ステータス</th>
      <th>優先順位</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline.strftime('%Y-%m-%d') %></td>
        <td><%= task.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to 'タスクを登録する', new_task_path %>